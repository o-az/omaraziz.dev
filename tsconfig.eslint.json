{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "types": ["@types/node"],
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "extends": "./tsconfig.json",
  "exclude": ["node_modules"],
  "include": [".eslintrc.js", "vitest.config.ts", ".prettierrc.js", ".babelrc.js", "**/src/**/*.ts", "**/src/**/*.d.ts"]
}
